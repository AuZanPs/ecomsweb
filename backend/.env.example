# Database Configuration
# Local MongoDB (default)
MONGODB_URI=mongodb://127.0.0.1:27017/ecommerce
# MongoDB Atlas example (uncomment and fill in to use Atlas)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ecommerce?retryWrites=true&w=majority&appName=<appName>

# JWT Configuration
# Use a long, random string (32+ chars) in production
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
# Refresh token expiry (optional; defaults to 30d in code if omitted)
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration (optional for now)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# PayPal Webhook (optional for now)
PAYPAL_WEBHOOK_ID=

# Server Configuration
# Backend currently defaults to 3000 if not provided
PORT=3000
NODE_ENV=development

# CORS Configuration
# Frontend dev server URL (local development)
CORS_ORIGIN=http://localhost:3000
# For production (update with your actual Vercel frontend URL):
# CORS_ORIGIN=https://your-frontend.vercel.app